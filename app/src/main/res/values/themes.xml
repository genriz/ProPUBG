<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProPUBG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/text_gray1</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditText" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/text_gray1</item>
    </style>
    <style name="TabLayout">
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="titleTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/sfpro_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="windowFixedWidthMajor">75%</item>
        <item name="windowFixedWidthMinor">75%</item>
    </style>
</resources>