<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="resultsItem"
            type="app.propubg.main.menu.model.ResultsItem" />
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="19dp">
        <View
            android:visibility="invisible"
            android:id="@+id/itemDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/item_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemDot"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/news_item_back">
            <RelativeLayout
                android:id="@+id/tournamentImageLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.34"
                app:layout_constraintDimensionRatio="1:1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    setImageResults="@{resultsItem.resultsOfTournament}"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/resultsImageWait"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/resultsImage"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:visibility="@{resultsItem.resultsOfTournament.getRegionList().length()==0?View.GONE:View.VISIBLE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/region_back"
                    android:text="@{resultsItem.resultsOfTournament.getRegionList()}"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sfpro_thin"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/titleLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tournamentImageLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/sfpro_regular"
                    android:text="@{resultsItem.resultsOfTournament.title}"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/text_gray2"
                    android:gravity="start"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/sfpro_regular"
                    android:includeFontPadding="false"
                    setResultsStage="@{resultsItem.resultsOfTournament}"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <TextView
                android:id="@+id/resultsAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/countsLayout"
                app:layout_constraintTop_toTopOf="@id/countsLayout"
                app:layout_constraintStart_toStartOf="@id/titleLayout"
                android:textSize="10sp"
                android:textColor="@color/text_gray2"
                android:gravity="start"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                tools:ignore="SmallSp"
                android:text="@{resultsItem.resultsOfTournament.author}"/>

            <TextView
                android:visibility="@{resultsItem.resultsOfTournament.date==null?View.GONE:View.VISIBLE}"
                android:id="@+id/resultsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/countsLayout"
                app:layout_constraintTop_toTopOf="@id/countsLayout"
                app:layout_constraintStart_toEndOf="@id/resultsAuthor"
                android:layout_marginStart="27dp"
                android:textSize="10sp"
                android:textColor="@color/text_gray2"
                android:gravity="start"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                tools:ignore="SmallSp"
                setSimpleDate="@{resultsItem.resultsOfTournament.date}"/>

            <LinearLayout
                android:visibility="@{resultsItem.resultsOfTournament.countViews>=0?View.VISIBLE:View.GONE}"
                android:id="@+id/countsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/text_gray2"
                    android:layout_marginEnd="2dp"
                    tools:ignore="SmallSp"
                    android:text="@{String.valueOf(resultsItem.resultsOfTournament.countViews)}"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_viewers"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>