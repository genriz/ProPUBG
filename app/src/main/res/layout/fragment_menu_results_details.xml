<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="resultsItem"
            type="app.propubg.main.menu.model.ResultsItem"/>
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/header_layout"
            android:id="@+id/headerDetails"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/barrier">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/imagesLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="19dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/item_image_back"
                        app:cardCornerRadius="10dp"
                        app:layout_constraintTop_toTopOf="parent">
                        <androidx.viewpager2.widget.ViewPager2
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/resultsItemPager"/>
                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:dotsColor="@color/gray2"
                            app:dotsCornerRadius="3dp"
                            app:dotsSize="6dp"
                            app:dotsSpacing="4dp"
                            app:dotsWidthFactor="1"
                            app:selectedDotColor="@color/red2"
                            app:progressMode="false"
                            android:layout_gravity="bottom|center"
                            android:layout_marginBottom="15dp"/>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/infoLayout"
                        android:layout_width="0dp"
                        app:layout_constraintStart_toStartOf="@id/imagesLayout"
                        app:layout_constraintEnd_toEndOf="@id/imagesLayout"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/imagesLayout"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:visibility="@{resultsItem.resultsOfTournament.getRegionList().length()==0?View.GONE:View.VISIBLE}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/region_back2"
                            android:text="@{resultsItem.resultsOfTournament.getRegionList()}"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sfpro_thin"
                            android:textSize="10sp"
                            tools:ignore="SmallSp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:layout_marginEnd="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="start"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/sfpro_regular"
                            android:textColor="@color/text_gray2"
                            android:text="@{resultsItem.resultsOfTournament.author}"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:id="@+id/newsDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:fontFamily="@font/sfpro_regular"
                            android:textColor="@color/text_gray2"
                            setSimpleDate="@{resultsItem.resultsOfTournament.date}"
                            tools:ignore="SmallSp" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical|end"
                            tools:ignore="UseCompoundDrawables"
                            android:visibility="gone">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:fontFamily="@font/sfpro_regular"
                                android:textColor="@color/text_gray2"
                                android:layout_marginEnd="2dp"
                                android:text="@{String.valueOf(resultsItem.resultsOfTournament.countViews)}"
                                tools:ignore="SmallSp" />
                            <ImageView
                                android:layout_marginStart="2dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_viewers"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/resultsTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/infoLayout"
                        app:layout_constraintStart_toStartOf="@id/imagesLayout"
                        app:layout_constraintEnd_toEndOf="@id/imagesLayout"
                        android:layout_marginTop="20dp"
                        android:textSize="18sp"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/sfpro_medium"
                        android:text="@{resultsItem.resultsOfTournament.title}"/>

                    <TextView
                        android:id="@+id/resultsStage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/resultsTitle"
                        app:layout_constraintStart_toStartOf="@id/resultsTitle"
                        app:layout_constraintEnd_toEndOf="@id/resultsTitle"
                        android:layout_marginTop="2dp"
                        android:textSize="16sp"
                        android:includeFontPadding="false"
                        android:textColor="@color/text_gray3"
                        android:fontFamily="@font/sfpro_regular"
                        setResultsStage="@{resultsItem.resultsOfTournament}"/>

                    <TextView
                        android:background="@drawable/tournament_info_back"
                        android:padding="9dp"
                        android:id="@+id/resultsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/resultsStage"
                        app:layout_constraintStart_toStartOf="@id/resultsStage"
                        app:layout_constraintEnd_toEndOf="@id/resultsStage"
                        android:layout_marginTop="26dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/sfpro_light"
                        setResultsText="@{resultsItem.resultsOfTournament}"/>

                    <LinearLayout
                        android:paddingBottom="64dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/resultsText"
                        android:layout_marginTop="36dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="center">
                        <ImageView
                            android:id="@+id/btnInstagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_instagram"
                            tools:ignore="ContentDescription"
                            android:layout_marginEnd="11dp"/>
                        <ImageView
                            android:id="@+id/btnTelegram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_telegram"
                            tools:ignore="ContentDescription"
                            android:layout_marginStart="11dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:barrierDirection="top"
                app:constraint_referenced_ids="advertMain"/>
            <include layout="@layout/advert_item"
                android:id="@+id/advertMain"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>