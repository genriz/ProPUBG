<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="tournamentItem"
            type="app.propubg.main.tournaments.model.TournamentItem" />
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="19dp">
        <View
            android:visibility="invisible"
            android:id="@+id/itemDot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/item_dot"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemDot"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="5dp"
            android:background="@drawable/news_item_back">
            <RelativeLayout
                android:id="@+id/tournamentImageLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.34"
                app:layout_constraintDimensionRatio="1:1">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="14dp"
                    app:cardElevation="0dp"
                    setImageTournament="@{tournamentItem.tournament}"
                    app:cardBackgroundColor="@android:color/transparent">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/tournamentImageWait"
                        android:layout_gravity="center"
                        tools:ignore="ContentDescription" />
                    <ImageView
                        android:id="@+id/tournamentImage"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:ignore="ContentDescription" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:visibility="@{tournamentItem.tournament.getRegionList().length()==0?View.GONE:View.VISIBLE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/region_back"
                    android:text="@{tournamentItem.tournament.getRegionList()}"
                    android:textColor="@color/white"
                    android:fontFamily="@font/sfpro_thin"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription"
                setVerificationTournament="@{tournamentItem.tournament}"/>

            <TextView
                android:id="@+id/tournamentTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tournamentImageLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="30dp"
                android:textSize="14sp"
                android:fontFamily="@font/sfpro_regular"
                android:text="@{tournamentItem.tournament.title}"/>

            <LinearLayout
                android:id="@+id/teamCountLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tournamentImageLayout"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="18dp">
                <LinearLayout
                    android:visibility="@{tournamentItem.tournament.mode==null?View.GONE:View.VISIBLE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tournament_mode"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_regular"
                        android:includeFontPadding="false"
                        android:textSize="10sp"
                        android:textColor="@color/text_gray2"
                        android:text="@{tournamentItem.tournament.mode}"
                        tools:ignore="SmallSp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="@{tournamentItem.tournament.countTeams==null?View.GONE:View.VISIBLE}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_tournament_teams"
                        tools:ignore="ContentDescription"
                        android:layout_marginStart="7dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sfpro_regular"
                        android:includeFontPadding="false"
                        android:textSize="10sp"
                        android:textColor="@color/text_gray2"
                        android:text="@{String.valueOf(tournamentItem.tournament.countTeams)}"
                        tools:ignore="SmallSp"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/teamCountLayout"
                app:layout_constraintBottom_toBottomOf="@id/teamCountLayout"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="12dp"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/text_gray2"
                    android:layout_marginEnd="2dp"
                    android:text="@{String.valueOf(tournamentItem.tournament.countViews)}"
                    tools:ignore="SmallSp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_viewers"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>