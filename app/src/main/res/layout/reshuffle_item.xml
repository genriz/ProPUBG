<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="reshuffleItem"
            type="app.propubg.main.news.model.ReshuffleItem" />
        <import type="android.view.View"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="11dp"
            android:id="@+id/dateHeader"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_medium"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:id="@+id/dateTxt"/>
            <View
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray2"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="19dp">

            <View
                android:visibility="invisible"
                android:id="@+id/itemDot"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/item_dot"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/itemDot"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="5dp"
                android:background="@drawable/news_item_back">
                <RelativeLayout
                    android:id="@+id/newsImageLayout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.34"
                    app:layout_constraintDimensionRatio="1:1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="0dp"
                        setImageReshuffles="@{reshuffleItem.reshuffle}"
                        app:cardBackgroundColor="@color/place_gray">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/reshuffleImageWait"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription" />
                        <ImageView
                            android:id="@+id/reshuffleImage"
                            android:scaleType="centerCrop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:visibility="@{reshuffleItem.reshuffle.getRegionList().length()==0?View.GONE:View.VISIBLE}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/region_back"
                        android:text="@{reshuffleItem.reshuffle.getRegionList()}"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sfpro_thin"
                        android:textSize="10sp"
                        tools:ignore="SmallSp"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/newsDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/newsTitle"
                    app:layout_constraintStart_toStartOf="@id/newsTitle"
                    app:layout_constraintEnd_toEndOf="@id/newsTitle"
                    android:textSize="10sp"
                    android:fontFamily="@font/sfpro_regular"
                    android:textColor="@color/text_gray2"
                    setDateItem="@{reshuffleItem.reshuffle.date}"
                    tools:ignore="SmallSp" />
                <TextView
                    android:id="@+id/newsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/newsImageLayout"
                    app:layout_constraintBottom_toBottomOf="@id/newsImageLayout"
                    app:layout_constraintStart_toEndOf="@id/newsImageLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="30dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/sfpro_regular"
                    setTitleReshuffles="@{reshuffleItem.reshuffle}"
                    android:maxLines="3"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:id="@+id/authorLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/newsTitle"
                    app:layout_constraintStart_toStartOf="@id/newsTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:layout_marginEnd="12dp"
                        android:fontFamily="@font/sfpro_regular"
                        android:textColor="@color/text_gray2"
                        android:text="@{reshuffleItem.reshuffle.author}"
                        tools:ignore="SmallSp" />
                    <LinearLayout
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">
                        <!-- android:visibility="@{reshuffleItem.reshuffle.countViews==null?View.GONE:View.VISIBLE}" -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:fontFamily="@font/sfpro_regular"
                            android:textColor="@color/text_gray2"
                            android:layout_marginEnd="2dp"
                            android:text="@{String.valueOf(reshuffleItem.reshuffle.countViews)}"
                            tools:ignore="SmallSp" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_viewers"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_unique"
                    app:layout_constraintTop_toTopOf="@id/newsDate"
                    app:layout_constraintBottom_toBottomOf="@id/newsDate"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="12dp"
                    tools:ignore="ContentDescription"
                    android:visibility="@{reshuffleItem.reshuffle.uniqueness?View.VISIBLE:View.GONE}"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</layout>