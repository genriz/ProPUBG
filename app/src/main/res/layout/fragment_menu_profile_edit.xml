<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="app.propubg.login.model.UserRealm" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_profile_layout"
            android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/avatarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/header">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                setAvatar="@{user.user}">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/avatarWait"
                    tools:ignore="ContentDescription" />
                <ImageView
                    android:id="@+id/avatarImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle_holder"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="27dp"
                setNick="@{user.user}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:textColor="@color/text_gray2"
                android:layout_marginTop="2dp"
                android:text="@{user.user.phoneNumber}"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/avatarLayout"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="23dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/text_gray1"
                android:layout_marginTop="6dp"
                android:text="@string/nick"
                android:layout_marginStart="17dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputNickname"
                    android:inputType="text"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="12dp"
                    android:hint="@string/nick_new"
                    android:imeOptions="actionDone"
                    android:text="@{user.user.nickname}"
                    android:background="@drawable/edittext_menu_back"
                    tools:ignore="Autofill,LabelFor,TextFields" />
                <ImageView
                    android:id="@+id/nickDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_advert"
                    android:layout_gravity="end|center_vertical"
                    android:padding="12dp"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
            <TextView
                android:id="@+id/errorNickname"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_marginTop="8dp"
                android:layout_marginStart="17dp"/>

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            android:textColor="@color/black"
            app:backgroundTint="@color/orange"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnSupport"
            android:layout_marginBottom="10dp"
            app:cornerRadius="30dp"
            android:text="@string/copyID"
            android:textAllCaps="false"
            android:id="@+id/btnCopyId"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            app:backgroundTint="@color/blue2"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnLogout"
            android:layout_marginBottom="10dp"
            app:cornerRadius="30dp"
            android:text="@string/contact_support"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:id="@+id/btnSupport"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            app:backgroundTint="@color/gray"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            app:cornerRadius="30dp"
            android:text="@string/logout"
            android:textColor="@color/red2"
            android:textAllCaps="false"
            android:id="@+id/btnLogout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>