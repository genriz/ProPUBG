<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="user"
            type="app.propubg.login.model.UserRealm" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/header_profile_layout"
            android:id="@+id/header"
            app:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/avatarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@id/header">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_avatar"
                setAvatar="@{user.user}"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="27dp"
                setNick="@{user.user}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:layout_marginTop="2dp"
                android:text="@{user.user.phone_number}"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@id/avatarLayout"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="23dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/text_gray1"
                android:layout_marginTop="6dp"
                android:text="@string/nick"
                android:layout_marginStart="17dp"/>
            <EditText
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputNickname"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:imeOptions="actionDone"
                android:text="@{user.user.nickname}"
                android:background="@drawable/edittext_menu_back"
                tools:ignore="Autofill,LabelFor,TextFields" />
            <TextView
                android:id="@+id/errorNickname"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/red"
                android:layout_marginTop="8dp"
                android:layout_marginStart="17dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro_regular"
                android:includeFontPadding="false"
                android:textSize="12sp"
                android:textColor="@color/text_gray1"
                android:layout_marginTop="9dp"
                android:text="@string/phone"
                android:layout_marginStart="17dp"/>
            <EditText
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inputPhone"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:text="@{user.user.phone_number}"
                android:background="@drawable/edittext_menu_back"
                tools:ignore="Autofill,LabelFor,TextFields" />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="23dp"
            app:backgroundTint="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"
            app:cornerRadius="30dp"
            android:text="@string/logout"
            android:textColor="@color/red2"
            android:textAllCaps="false"
            android:id="@+id/btnLogout"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>